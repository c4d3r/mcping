<div id="{{ server.id }}">
    <h5>
        <span class="title-text">{{ server.name }}</span>
        <span style="float:right;" class="label label-danger">Offline</span>
    </h5>

    <div class="progress">
        <div class="progress-bar progress-bar-striped active"
             role="progressbar"
             aria-valuenow="0" aria-valuemin="0"
             aria-valuemax="100"
             style="width: 0%;">
            <span class="bar-text">0/0</span>
        </div>
    </div>
</div>